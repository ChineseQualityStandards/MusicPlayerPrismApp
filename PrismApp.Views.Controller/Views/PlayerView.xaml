<UserControl
    x:Class="PrismApp.Views.Controller.Views.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrismApp.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <!--  功能区  -->
        <materialDesign:ColorZone
            Padding="5"
            materialDesign:ElevationAssist.Elevation="Dp4"
            ClipToBounds="False"
            DockPanel.Dock="Bottom">
            <DockPanel Background="AliceBlue" LastChildFill="True">
                <!--  封面  -->
                <Border
                    Width="60"
                    Height="60"
                    Margin="15,5,5,5"
                    BorderThickness="1"
                    CornerRadius="10"
                    DockPanel.Dock="Left">
                    <Button Style="{DynamicResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon
                            Width="47"
                            Height="47"
                            Kind="Music" />
                    </Button>
                </Border>
                <!--  歌曲名 - 歌手  -->
                <DockPanel Margin="15,5" DockPanel.Dock="Left">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="20"
                        Text="青花瓷"
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Text=" - "
                        TextAlignment="Center" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        FontSize="18"
                        FontWeight="Light"
                        Text="周杰伦"
                        TextAlignment="Center" />
                </DockPanel>
                <ToggleButton
                    DockPanel.Dock="Right"
                    IsChecked="{Binding ElementName=MainDrawer, Path=IsRightDrawerOpen, Mode=TwoWay}"
                    Style="{DynamicResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="PlaylistMusic" />
                </ToggleButton>
                <!--  播放控件  -->
                <StackPanel HorizontalAlignment="Center">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Margin="5"
                            Style="{DynamicResource MaterialDesignIconButton}"
                            ToolTip="随机播放">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="ShuffleVariant" />
                        </Button>
                        <Button
                            Margin="30,5,5,5"
                            Style="{DynamicResource MaterialDesignIconButton}"
                            ToolTip="上一曲">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="SkipPrevious" />
                        </Button>
                        <Button
                            Margin="5"
                            Style="{DynamicResource MaterialDesignIconButton}"
                            ToolTip="播放">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="Play" />
                        </Button>
                        <Button
                            Margin="5,5,30,5"
                            Style="{DynamicResource MaterialDesignIconButton}"
                            ToolTip="下一曲">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="SkipNext" />
                        </Button>
                        <Button
                            Margin="5"
                            Style="{DynamicResource MaterialDesignIconButton}"
                            ToolTip="音量">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Kind="VolumeMedium" />
                        </Button>
                    </StackPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Text="00:00"
                            TextAlignment="Center" />
                        <TextBlock
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            Text="04:23"
                            TextAlignment="Center" />
                        <Slider
                            Width="400"
                            Margin="5"
                            Maximum="50"
                            Minimum="0"
                            Value="35" />
                    </DockPanel>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        <!--  主体  -->
        <materialDesign:DrawerHost x:Name="MainDrawer">
            <materialDesign:DrawerHost.RightDrawerContent>
                <!--  播放列表  -->
                <StackPanel Width="240" />
            </materialDesign:DrawerHost.RightDrawerContent>
            <DockPanel Background="Green" />
        </materialDesign:DrawerHost>
    </DockPanel>
</UserControl>
