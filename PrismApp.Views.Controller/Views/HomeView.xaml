<UserControl
    x:Class="PrismApp.Views.Controller.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:PrismApp.Core.Constants;assembly=PrismApp.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrismApp.Views.Controller.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <DockPanel LastChildFill="True">
        <!--  菜单栏  -->
        <materialDesign:ColorZone
            Padding="16"
            materialDesign:ElevationAssist.Elevation="Dp4"
            ClipToBounds="False"
            CornerRadius="1"
            DockPanel.Dock="Top"
            Mode="PrimaryDark">
            <DockPanel LastChildFill="True">
                <ToggleButton
                    DockPanel.Dock="Left"
                    IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                <Button
                    Command="{Binding DelegateCommand}"
                    CommandParameter="Exit"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource MaterialDesignIconButton}"
                    ToolTip="退出播放器">
                    <materialDesign:PackIcon Kind="Close" />
                </Button>
                <Button
                    Command="{Binding DelegateCommand}"
                    CommandParameter="MaximizeOrNormal"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource MaterialDesignIconButton}"
                    ToolTip="最大化">
                    <materialDesign:PackIcon Kind="Maximize" />
                </Button>
                <Button
                    Command="{Binding DelegateCommand}"
                    CommandParameter="Minimize"
                    DockPanel.Dock="Right"
                    Style="{DynamicResource MaterialDesignIconButton}"
                    ToolTip="最小化">
                    <materialDesign:PackIcon Kind="Minimize" />
                </Button>
                <TextBlock
                    Margin="16,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="48"
                        Height="38"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="MusicCircle" />
                </TextBlock>
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="DFKai-SB"
                    FontSize="24"
                    Text="音乐播放器" />
            </DockPanel>
        </materialDesign:ColorZone>
        <materialDesign:DrawerHost x:Name="DrawerHost" OpenMode="Standard">
            <!--  侧边栏  -->
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel
                    Width="240"
                    Background="AliceBlue"
                    LastChildFill="True">
                    <TextBlock
                        DockPanel.Dock="Bottom"
                        Foreground="DodgerBlue"
                        Text="{Binding Message}"
                        TextAlignment="Center" />
                    <materialDesign:ColorZone Background="Transparent" DockPanel.Dock="Bottom">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding DelegateCommand}"
                                CommandParameter="Home"
                                Style="{DynamicResource MaterialDesignIconButton}"
                                ToolTip="主页">
                                <materialDesign:PackIcon Kind="Microsoft" />
                            </Button>
                            <Button
                                Command="{Binding DelegateCommand}"
                                CommandParameter="Skin"
                                Style="{DynamicResource MaterialDesignIconButton}"
                                ToolTip="皮肤">
                                <materialDesign:PackIcon Kind="TshirtCrew" />
                            </Button>
                            <Button
                                Command="{Binding DelegateCommand}"
                                CommandParameter="Setting"
                                Style="{DynamicResource MaterialDesignIconButton}"
                                ToolTip="设置">
                                <materialDesign:PackIcon Kind="Settings" />
                            </Button>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <Grid Height="120" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Width="100"
                            Height="100"
                            Command="{Binding DelegateCommand}"
                            CommandParameter="这是个没有意义的按钮"
                            Style="{DynamicResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon
                                Width="60"
                                Height="60"
                                Kind="Home" />
                        </Button>
                        <Button
                            Grid.Column="1"
                            Width="100"
                            Height="100"
                            Command="{Binding DelegateCommand}"
                            CommandParameter="这也是个没有意义的按钮"
                            Style="{DynamicResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon
                                Width="60"
                                Height="60"
                                Kind="Pen" />
                        </Button>
                    </Grid>
                    <Button
                        Height="50"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        DockPanel.Dock="Top"
                        Style="{DynamicResource MaterialDesignOutlinedButton}">
                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Settings" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{DynamicResource MaterialDesignHeadline5TextBlock}">
                                默认列表
                            </TextBlock>
                        </DockPanel>
                    </Button>
                    <Border />
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <!--  内容页  -->
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.HomeRegion}" />
        </materialDesign:DrawerHost>
    </DockPanel>
</UserControl>
